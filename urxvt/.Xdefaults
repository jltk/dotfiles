# urxvt config of jltk

# window appearal
URxvt*scrollBar: false
URxvt.internalBorder: 8

# clickable links
URxvt*perl-ext-common: default,matcher
URxvt*url-launcher: icecat
URxvt.matcher.button: 1

# disable bold and italic fonts
URxvt.boldFont:
URxvt.italicFont:
URxvt.boldItalicFont:

# set colors for italic, bold and underlined text
URxvt.colorIT: #ffffff
URxvt.colorBD: #656c77
URxvt.colorUL: #69acd3

URxvt*cursorColor: #dc579c
URxvt*background: #272d36
URxvt*foreground: #bac3d0

URxvt*color0: #3e434a
URxvt*color1: #dc578c
URxvt*color2: #5ed69c
URxvt*color3: #f8fb9d
